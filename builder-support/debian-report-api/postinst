#!/bin/sh
case "$1" in
  configure)
    if [ -z "`getent group wforce-report-api`" ]; then
      addgroup --quiet --system wforce-report-api
    fi
    if [ -z "`getent passwd wforce-report-api`" ]; then
      echo -n "Creating user and group wforce-report-api..."
      adduser --quiet --system --home /nonexistent --shell /bin/false --ingroup wforce-report-api --disabled-password --disabled-login wforce-report-api
      echo "done"
    fi
    ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  *)
    echo "postinst called with unknown argument '$1'" >&2
    exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
